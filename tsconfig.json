{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ES2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./typings/**/*.d.ts", "__tests__/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".esbuild/**/*", "_warmup/**/*", ".vscode/**/*"]
}
